@model Alcom.MODEL.Urun

@{
    ViewBag.Title = "Ürün Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Yeni Ürün</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            <form role="form" method="post" action="Create">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="box-body">
                    <div class="form-group">
                        <label for="urunkodu">Ürün Kodu</label>
                        <input type="number" class="form-control" id="urunkodu" name="UrunKodu" placeholder="Ürün Kodu">
                        @Html.ValidationMessageFor(model => model.UrunKodu, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="urunadi">Ürün Adı</label>
                        <input type="text" class="form-control" id="urunadi" name="UrunAdi" placeholder="Ürün Adı">
                        @Html.ValidationMessageFor(model => model.UrunAdi, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Marka</label>
                        <select class="form-control">

                            <option value="0">Seçiniz</option>

                            @foreach (var item in @ViewBag.Markalar)
                            {
                                <option value="@item.Id">@item.Ad</option>
                            }
                        </select>
                        @Html.ValidationMessageFor(model => model.MarkaId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Kategori</label>
                        <select class="form-control">
                            <option value="0">Seçiniz</option>

                            @foreach (var item in @ViewBag.Kategoriler)
                            {
                                <option value="@item.Id">@item.Adi</option>
                            }
                        </select>
                        @Html.ValidationMessageFor(model => model.KategoriId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="fiyati">Fiyatı</label>
                        <input type="number" class="form-control" id="fiyati" name="Fiyatı">
                        @Html.ValidationMessageFor(model => model.Fiyati, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="stok">Stok</label>
                        <input type="number" class="form-control" id="stok" name="Stok">
                        @Html.ValidationMessageFor(model => model.Stok, "", new { @class = "text-danger" })
                    </div>

                </div><!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <a href="@Url.Action("Index","Urun")" class="btn btn-danger">İptal</a>

                </div>
            </form>
        </div>
    </div>


</section>
