@model IEnumerable<Alcom.MODEL.Urun>

@{
    ViewBag.Title = "Ürünler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Ürün Listesi</h3>
                    <div class="box-tools">
                        <div class="input-group">
                            <input type="text" name="table_search" class="form-control input-sm pull-right" style="width: 150px;" placeholder="Search" />
                            <div class="input-group-btn">
                                <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div><!-- /.box-header -->


                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tr>
                            <th>
                                <a href="@Url.Action("Create","Urun")" class="btn btn-primary">Yeni Ürün Ekle</a>
                            </th>
                        </tr>
                        <tr>
                            <th>Id</th>
                            <th>Kodu</th>
                            <th>Adı</th>
                            <th>Marka</th>
                            <th>Kategori</th>
                            <th>Fiyat</th>
                            <th>Stok</th>
                            <th>Silindi</th>
                            <th>İşlem</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.UrunKodu</td>
                                <td>@item.UrunAdi</td>
                                <td>@item.Markasi.Ad</td>
                                <td>@item.Kategorisi.Adi</td>
                                <td>@item.Fiyati</td>
                                <td>@item.Stok</td>
                                <td>@item.SilindiMi</td>
                                <td>
                                    <a href="@Url.Action("Edit","Urun", new { id = item.Id })" class="btn btn-primary">Düzenle</a>
                                    <a href="@Url.Action("Details","Urun", new { id = item.Id })" class="btn btn-success">Detay</a>
                                    <a href="@Url.Action("Delete","Urun", new { id = item.Id })" class="btn btn-danger">Sil</a>
                                </td>
                            </tr>
                        }


                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>
</section><!-- /.content -->