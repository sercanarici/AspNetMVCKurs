@using Ders2Model.Models

@model List<Ogrenci>

@{
    ViewBag.Title = "Ogrenciler";
}

<h2>Ogrenciler</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Adı</th>
            <th scope="col">Soyadı</th>
            <th scope="col">Öğrenci No</th>
            <th scope="col">Doğum Tarihi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Ad</td>
                <td>@item.Soyad</td>
                <td>@item.OgrenciNo</td>
                <td>@item.DogumTarihi</td>
            </tr>
        }


    </tbody>
</table>